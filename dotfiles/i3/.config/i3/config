## Media controls
bindsym XF86AudioPlay         exec --no-startup-id player-control toggle && pkill -SIGRTMIN+3 i3blocks
bindsym XF86AudioNext         exec --no-startup-id player-control next   && pkill -SIGRTMIN+3 i3blocks
bindsym XF86AudioPrev         exec --no-startup-id player-control prev   && pkill -SIGRTMIN+3 i3blocks
bindsym XF86AudioStop         exec --no-startup-id player-control stop   && pkill -SIGRTMIN+3 i3blocks

## Sreen brightness controls
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 5 && pkill -SIGRTMIN+2 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 && pkill -SIGRTMIN+2 i3blocks

## Touchpad Toggle control
bindsym XF86TouchpadToggle    exec --no-startup-id touchpad-toggle

## Laptop Keyboard Toggle
bindsym XF86Launch7           exec --no-startup-id [ -f /usr/share/keyboarder/keyboarder ] && /usr/share/keyboarder/keyboarder

## PrintScreen - whole, selection, current

bindsym --release Print       exec --no-startup-id scrot -e 'mv $f ~/Pictures/'
bindsym --release Shift+Print exec --no-startup-id scrot -s -e 'mv $f ~/Pictures/'
bindsym --release Mod1+Print  exec --no-startup-id scrot -u -e 'mv $f ~/Pictures/'

# ############################
#  Modes
# ############################

## Changing modes
bindsym $mod+d       mode $defaultMode
bindsym $mod+x       mode $controlMode
bindsym $mod+r       mode $resizeMode
bindsym $mod+p       exec logout.py
bindsym $mod+Shift+d mode $deadMode

## Control Mode
mode $controlMode {
     bindsym $mod+c reload
     bindsym $mod+r restart
     bindsym $mod+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"; mode $defaultMode

     bindsym u exec --no-startup-id setxkbmap us -variant dvorak-intl && pkill -SIGRTMIN+5 i3blocks; mode $defaultMode
     bindsym b exec --no-startup-id setxkbmap br                      && pkill -SIGRTMIN+5 i3blocks; mode $defaultMode

     bindsym Return mode $defaultMode
     bindsym Escape mode $defaultMode
}

## Resize Mode
mode $resizeMode {
     # These bindings trigger as soon as you enter the resize mode
     bindsym $left  resize shrink width  10 px or 10 ppt
     bindsym $down  resize grow   height 10 px or 10 ppt
     bindsym $up    resize shrink height 10 px or 10 ppt
     bindsym $right resize grow   width  10 px or 10 ppt

     # same bindings, but for the arrow keys
     bindsym Left  resize shrink width  10 px or 10 ppt
     bindsym Down  resize grow   height 10 px or 10 ppt
     bindsym Up    resize shrink height 10 px or 10 ppt
     bindsym Right resize grow   width  10 px or 10 ppt

     # fullscreen toggle
     bindsym f fullscreen toggle; mode $defaultMode

     # shortcut to change window border
     bindsym b border normal 0; mode $defaultMode
     bindsym p border pixel  1; mode $defaultMode

     bindsym z border none; mode $defaultMode

     # back to normal: Enter or Escape
     bindsym Return mode $defaultMode
     bindsym Escape mode $defaultMode
}

## Power Mode
mode $powerMode {
    bindsym l exec --no-startup-id screen-lock; mode $defaultMode

    bindsym o exec --no-startup-id i3-msg    exit;      mode $defaultMode
    bindsym s exec --no-startup-id systemctl suspend;   mode $defaultMode
    bindsym h exec --no-startup-id systemctl hibernate; mode $defaultMode
    bindsym r exec --no-startup-id systemctl reboot;    mode $defaultMode
    bindsym p exec --no-startup-id systemctl poweroff;  mode $defaultMode

    bindsym Return mode $defaultMode
    bindsym Escape mode $defaultMode
}

## Dead Mode
mode $deadMode {
    bindsym $mod+Escape mode $defaultMode
}

# ############################
#  System Bar
# ############################

bar {
    status_command    i3blocks -c ~/.config/i3/i3blocks.conf
    font              pango:Hack 10
    workspace_buttons yes
    height            25
    separator_symbol  ""
    tray_output       primary

   colors {
        # bar background color
        background $color00
        # text color used for blocks that do not have a color specified.
        statusline $color0F
        separator  $color08
        # workspaces section
        #                    border   backgr.  text
        focused_workspace    $color04 $color04 $color0F
        inactive_workspace   $color00 $color00 $color08
        active_workspace     $color00 $color00 $color03
        urgent_workspace     $color01 $color01 $color0F
        binding_mode         $color01 $color01 $color00
    }
}

# #############################
#  Window manipulation
# #############################

## Kill container
bindsym $mod+Shift+q kill

## Move focused window
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left   move left
bindsym $mod+Shift+Down   move down
bindsym $mod+Shift+Up     move up
bindsym $mod+Shift+Right  move right

## Scratchpad - move focused, switch/hide scratchpad windows
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus       scratchpad show

## Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

## Enter (f)ullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

